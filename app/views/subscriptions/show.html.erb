<% provide(:title, "Your Subscription") %>
<div class="row">
	<aside class="col-md-4">
		<section class="subscription_info">
			<h1>
				Your Subscription
			</h1>
			<p>Your name is <%= @user.name %></p>
			<p>Your Chargify subscription ID is <%= @subscription.chargify_id %></p>
		</section>
		<section class="subscription_actions">
			<p>What would you like to do?</p>
			<ul id="buttons">
				<li><%= link_to "Cancel my subscription", cancel_subscription_path %></li>
				<li><%= link_to "Update my card" %></li>
				<li><%= link_to "Change my plan" %></li>
			</ul>
		</section>
	</aside>
</div>